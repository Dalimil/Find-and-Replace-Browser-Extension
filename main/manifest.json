{
  "manifest_version": 2,
  "name": "Search and Replace Plus",
  "version": "0.1",
  "description": "Adds search & replace functionality for text input fields.",
  "author": "Dalimil Hajek",
  "offline_enabled": true,
  /*"icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png"
  },*/
  "permissions": [
    "activeTab"
  ],
  "background": {
    "persistent": false,
    "scripts": [ "src/background.js" ]
  },
  "browser_action": {
    "default_title": "Search & Replace"
    /* https://developer.chrome.com/extensions/browserAction */
  }
}
